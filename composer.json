{
  "name": "vendor/wp-mcp-server",
  "description": "WP MCP Server plugin exposing WordPress as an MCP server",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=7.4",
    "logiscape/mcp-sdk-php": "^1.0 || *",
    "composer/installers": "^1.9"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^8.5 || ^9.0"
  },
  "autoload": {
    "psr-4": {
      "WP_MCP\\": "includes/",
      "WP_MCP\\Admin\\": "admin/",
      "WP_MCP\\Tools\\": "includes/tools/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WP_MCP\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml.dist"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
